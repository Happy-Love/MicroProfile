<section class="post">
  <div class="user">
    <div class="avatar">
      <% if post.user.avatar.attached? %>
        <%= link_to user_path(post.user) do %>
          <%= image_tag post.user.avatar %>
        <% end %>
      <% end %>
    </div>
    
    <a href="<%=user_path(post.user)%>"  class="username"> <%= post.user.firstname %></a>
    <a href="<%=user_post_path(post.user.id, post.id)%>" style=" margin-left:auto; margin-right:20px;  " class="username"> <%= post.comments.count %> Comments</a>
    
    
  </div>
  <%= link_to user_post_path(post.user.id,post.id) do %>
  <%= image_tag post.image, class: 'main-image' %>
  <% end %>
  <div class="description">
    <%= render partial: "posts/description", locals: {post: post} %>
  </div>
</section>